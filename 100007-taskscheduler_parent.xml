<!--
  Parent Rule for Windows Task Scheduler Events

  Provides base rule for Task Scheduler events from the
  Microsoft-Windows-TaskScheduler/Operational channel.

  Required:
  - Channel is enabled by default on Windows
  - Events are logged to: Microsoft-Windows-TaskScheduler/Operational

  Common Event IDs:
  - 106: Scheduled task registered
  - 140: Task registration updated
  - 141: Task registration deleted
  - 200: Task execution started
  - 201: Task execution completed
  - 325: Launch request queued

  Use Cases:
  - Detect malware persistence via scheduled tasks
  - Monitor suspicious task creation
  - Track privilege escalation attempts
  - Detect lateral movement using scheduled tasks

  Rule ID: 109993 (Custom parent rule for Task Scheduler)
-->

<group name="windows,taskscheduler,">

  <!-- Parent rule for all Task Scheduler events -->
  <rule id="109993" level="3">
    <field name="win.system.channel">Microsoft-Windows-TaskScheduler/Operational</field>
    <description>Windows Task Scheduler Event</description>
    <options>no_full_log</options>
    <group>windows,taskscheduler,</group>
  </rule>

</group>
