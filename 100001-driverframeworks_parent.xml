<!--
  Parent Rule for Windows DriverFrameworks Events

  Provides base rule for USB device detection and other driver-related events
  from the Microsoft-Windows-DriverFrameworks-UserMode/Operational channel.

  Required:
  - Channel must be enabled on Windows:
    wevtutil sl Microsoft-Windows-DriverFrameworks-UserMode/Operational /e:true

  Rule ID: 109999 (Custom parent rule for DriverFrameworks)
-->

<group name="windows,driverframeworks,">

  <!-- Parent rule for all DriverFrameworks events -->
  <rule id="109999" level="3">
    <field name="win.system.channel">Microsoft-Windows-DriverFrameworks-UserMode/Operational</field>
    <description>Windows DriverFrameworks Event</description>
    <options>no_full_log</options>
    <group>windows,driverframeworks,</group>
  </rule>

</group>
